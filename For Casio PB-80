10 RESTORE#
20 INPUT P
30 FOR G = 1 TO P
40 FOR D=1 TO 6
50 T=0
60 FOR X=1 to 3
70 Y=INT (RAN#*6)+1
80 T=T+Y
90 NEXT X
100 IF D=1 THEN S=T
110 IF D=2 THEN I=T
120 IF D=3 THEN W=T
130 IF D=4 THEN E=T
140 IF D=5 THEN C=T
150 IF D=6 THEN A=T
160 NEXT D
170 N$="·"+ STR$(G)
180 S$="St→"+ STR$(S)
190 I$="In→"+ STR$(I)
200 W$="Ws→"+ STR$(W)
210 D$="Dx→"+ STR$(E)
220 C$="Cn→"+ STR$(C)
230 H$="Ch→"+ STR$(A)
240 WRITE# N$,S$,I$,W$,D$,C$,H$
250 BEEP
260 NEXT G
